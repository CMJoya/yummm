<div class="recipe-list">

  <% @recipes.each do |recipe| %>

    <div class="card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand" style="background: url('<%= recipe.photo_url %>')">
        <h2 class="mdl-card__title-text"><%= recipe.name %></h2>
      </div>
      <div class="mdl-card__supporting-text">
        <%= recipe.description %>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to recipe.name, recipe_path(id: recipe.id), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>
    </div>

  <% end %>

</div>

<%= link_to new_recipe_path, class: "mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored" do %>
  <i class="material-icons">add</i>
<% end %>
